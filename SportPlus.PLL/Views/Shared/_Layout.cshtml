<body>
      <header class="site-navbar py-4" role="banner">

        <section class = "sec">
        <div class="d-flex align-items-center">
          <div class="site-logo">
            <a asp-controller="Home" asp-action="Index">
              <img src="~/images/flamingtext_com-208494727.png" alt="Logo" width = "170px" height = "60px" >
            </a>
          </div>
          <div class="ml-auto">
            <nav class="site-navigation position-relative text-right" role="navigation">
              <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                <li ><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                <li><a asp-controller="Home" asp-action="Teams" class="nav-link">Teams</a></li>
                <li><a asp-controller="Home" asp-action="Standings" class="nav-link">Standings</a></li>
                <li><a asp-controller="Account" asp-action="Login" class="nav-link">Sign In</a></li>
                <li><a asp-controller="Account" asp-action="Register"  class="nav-link">Sign UP</a></li>
                <li><a asp-controller="Account" asp-action="Profile" class="nav-link">My Profile</a></li>
                <li><a asp-controller="Account" asp-action="Logout" class="nav-link">Log Out</a></li>
              </ul>
            </nav>
            </section>

            <a href="#" class="d-inline-block d-lg-none site-menu-toggle js-menu-toggle text-black float-right text-white"><span
                class="icon-menu h3 text-white"></span></a>
          </div>
        </div>
    </header>
            @RenderBody()
   <footer class="footer-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-3">
            <div class="widget mb-3">
              <h3>News</h3>
