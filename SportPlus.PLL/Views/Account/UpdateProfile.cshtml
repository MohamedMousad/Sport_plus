@model EditUserVM
@{
	ViewData["Title"] = "UpdateProfile";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
.Update {
		margin-top: 100px;
		width: 4000px;
}	
</style>
<body>
	<header class="site-navbar py-4" role="banner">
		<section class="sec">
			<div class="d-flex align-items-center">
				<div class="site-logo">
				</div>
				<div class="ml-auto">


					<a href="#" class="d-inline-block d-lg-none site-menu-toggle js-menu-toggle text-black float-right text-white">
						<span class="icon-menu h3 text-white"></span>
					</a>
				</div>
			</div>
		</section>

	</header>

	<section>
		<form asp-controller="Account" asp-action="UpdateProfile" calss="Update" method="post">
			<div class="container py-5">
				<div class="row">
		<div class="container py-5">
			<div class="row">
				<div class="col">
				</div>
			</div>

			<div class="row">
				<div class="col-lg-4">
					<div class="card mb-4">
						<div class="card-body text-center">
							<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
								 class="rounded-circle img-fluid" style="width: 150px;">
							<div class="my-3"> <input type="text" placeholder="Username" id="username" asp-for="UserName"></div>
							<div class="text-muted mb-1"> <input type="text" placeholder="Info" id="info" name="info"></div>
							<div class="text-muted mb-4"> <input type="text" placeholder="Address" id="address" asp-for="Country"></div>
							<div class="d-flex justify-content-center mb-2">
							</div>
						</div>
						<div class="Update-Profile">
							<button type="submit" class="btn btn-primary btn-block">Save Changes</button>
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="card mb-4">
						<div class="card-body">
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Full Name</p>
								</div>
								<div class="col-sm-9">
									<div class="text-muted mb-0"> <input type="text" placeholder="Full Name" id="fullname" asp-for="FullName"></div>
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Email</p>
								</div>
								<div class="col-sm-9">
									<div class="text-muted mb-0"> <input type="text" placeholder="Email" id="email" asp-for="Email"></div>
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Phone</p>
								</div>
								<div class="col-sm-9">
									<div class="text-muted mb-0"> <input type="text" placeholder="Phone Number" id="phone" asp-for="PhoneNumber"></div>
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Favourite Team</p>
								</div>
								<div class="col-sm-9">
									<p class="text-muted mb-0"> <input type="text" placeholder="Favourite Team" id="favourite-team" asp-for="FavouriteTeam"></p>
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Country</p>
								</div>
								<div class="col-sm-9">
									<p class="text-muted mb-0"> <input type="text" placeholder="Favourite Team" id="favourite-team" asp-for="Country"></p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
		</form>
	</section>
	<!-- Bootstrap JS and dependencies -->
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>