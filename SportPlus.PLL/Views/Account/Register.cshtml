@model RegistrationVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
*:before,
*:after{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
body{
  background-color: #080710;
}
.background{
  width: 430px;
  height: 1000px;
  position: absolute;
  transform: translate(-50%,-50%);
  left: 50%;
  top: 50%;

}

form{
  height: 950px;
  width: 600px;
  background-color: rgba(255,255,255,0.13);
  position: absolute;
  transform: translate(-50%,-50%);
  top: 50%;
  left: 50%;
  border-radius: 10px;
  backdrop-filter: blur(10px);
  border: 2px solid rgba(255,255,255,0.1);
  box-shadow: 0 0 40px rgba(8,7,16,0.6);
  padding: 50px 35px;
  margin-top: 250px;

}
form *{
  font-family: 'Poppins',sans-serif;
  color: #ffffff;
  letter-spacing: 0.5px;
  outline: none;
  border: none;
}
form h3{
  font-size: 32px;
  font-weight: 500;
  line-height: 42px;
  text-align: center;
  color:#ffffff
}

label{
  display: block;
  margin-top: 30px;
  font-size: 16px;
  font-weight: 500;
}
input{
  display: block;
  height: 50px;
  width: 100%;
  background-color: rgba(255,255,255,0.07);
  border-radius: 3px;
  padding: 0 10px;
  margin-top: 8px;
  font-size: 14px;
  font-weight: 300;
}
::placeholder{
  color: #e5e5e5;
}
button{
  margin-top: 50px;
  width: 100%;
  background-color: #ffffff;
  color: #080710;
  padding: 15px 0;
  font-size: 18px;
  font-weight: 600;
  border-radius: 5px;
  cursor: pointer;
}
.social{
display: flex;
align-items: center;
justify-content: space-around;
}
.social div{
width: 150px;
border-radius: 3px;
color: #eaf0fb;
text-align: center;
margin-bottom: 10px;
}

.social button{
padding-bottom: 10px;
margin-top: 0px;
}

.social img{
width: 30px;
height: 30px;
}
.social button:hover{
background-color: rgba(233,160,160);
}
.social .fb{
margin-left: 25px;
}

.social i{
margin-right: 4px;
}

.email{
    display: flex;
    justify-content: space-between;
}
.email input{
    width: 70%;
    margin-left: 20px;
    margin-top: 20px;
    margin-right: 10px;
}
.username {
    display: flex;
    justify-content: space-between;
}
.username input{
    width: 70%;
    margin-left: 0px;
    margin-top: 20px;
    margin-right: 10px;
}
.phone{
    display: flex;
    justify-content: space-between;
}
.phone input{
    width: 70%;
    margin-left: 20px;
    margin-top: 20px;
    margin-right: 10px;
}
.Age{
    display: flex;
    justify-content: space-between;
}
.Age input{
    width: 48%;
    margin-left: 20px;
    margin-top: 20px;
    margin-right: 10px;
}
.Age label{
    margin-left: 20px;
    margin-top: 30px;
    margin-right: 10px;
}


.hero.overlay:before {
    content: "";
    height: 1200px;
    position: absolute;
    background: rgba(0, 0, 0, 0.5);
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
</style>
<body style="background-image: url('images/bg_3.jpg'); height: 1500; background-size: cover;">
    <div class="hero overlay">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-5 mx-auto text-center">
            <h1 class="text-white"></h1>
            <p></p>
          </div>
        </div>
      </div>
    </div>
    
    <form id="loginForm" asp-controller="Account" asp-action="Register">

      <h3>Create an Account</h3>
      <p style="margin-top:10px ;text-align: center;">Sign up with your scoial Media Account or Email address</p>

      <div class="social">
        <div class="go"><button><a href = "#"><img src = "~/images/icons8-google-logo-30 (1).png" width="30px" height="30px"></button></a></div>
        <div class="fb"><button><a href = "#"><img src = "~/images/icons8-facebook-logo-30.png"  ></button></a></div>
      </div>
     <h1>------------------------</h1>
      <div class="username">
        <label for="UserName">Username</label>
        <input type="text" asp-for="UserName" placeholder=" username" id="username" required>
  
      </div>
        <div class="Fullname">
            <label for="Fullname">Fullname</label>
            <input type="text" asp-for="FullName" placeholder=" username" id="username" required>

        </div>
     <div class="email">
      
      <label for ="Email">Email</label>
      <input asp-for="Email" type="email" placeholder="Email" id="email" required>

    </div>
      <div class="phone">
      <label for="PhoneNumber">Phone</label>
      <input asp-for="PhoneNumber" type="number" placeholder="Phone" id="phone" required>
      </div>
      <div class="Age">
            <label for="Gender">Gender</label>
        <input asp-for="Gender" type="text" placeholder="Gender" id="Gender" required>

      </div>
      
      <div class="password">
       <label for="Password">Password</label>
      <input asp-for="Password" type="password" placeholder="Password" id="password" required>

      <label for="ConfirmPassword">Confirm Password</label>
      <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" id="password" required>
      </div>

        <div class="form-group mb-3">
            <label asp-for="ProfileImage">Upload Profile Image</label>
            <input asp-for="ProfileImage" type="file" class="form-control" />
        </div>

      <button  type="submit">Sign Up</button>
    </form>
  </body>

