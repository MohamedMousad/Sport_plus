@model RegistrationVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style="background-image: url('images/bg_3.jpg'); height: 1500; background-size: cover;">
    <div class="hero overlay">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-5 mx-auto text-center">
            <h1 class="text-white"></h1>
            <p></p>
          </div>
        </div>
      </div>
    </div>
    
    <form id="loginForm" asp-controller="Account" asp-action="Register">

      <h3>Create an Account</h3>
      <p style="margin-top:10px ;text-align: center;">Sign up with your scoial Media Account or Email address</p>

      <div class="social">
        <div class="go"><button><a href = "#"><img src = "~/images/icons8-google-logo-30 (1).png" width="30px" height="30px"></button></a></div>
        <div class="fb"><button><a href = "#"><img src = "~/images/icons8-facebook-logo-30.png"  ></button></a></div>
      </div>
     <h1>------------------------</h1>
      <div class="username">
        <label for="UserName">Username</label>
        <input type="text" asp-for="UserName" placeholder=" username" id="username" required>
  
      </div>
        <div class="Fullname">
            <label for="Fullname">Fullname</label>
            <input type="text" asp-for="FullName" placeholder=" username" id="username" required>

        </div>
     <div class="email">
      
      <label for ="Email">Email</label>
      <input asp-for="Email" type="email" placeholder="Email" id="email" required>

    </div>
      <div class="phone">
      <label for="PhoneNumber">Phone</label>
      <input asp-for="PhoneNumber" type="number" placeholder="Phone" id="phone" required>
      </div>
      <div class="Age">
            <label for="Gender">Gender</label>
        <input asp-for="Gender" type="text" placeholder="Gender" id="Gender" required>

      </div>
      
      <div class="password">
       <label for="Password">Password</label>
      <input asp-for="Password" type="password" placeholder="Password" id="password" required>

      <label for="ConfirmPassword">Confirm Password</label>
      <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" id="password" required>
      </div>

        <div class="form-group mb-3">
            <label asp-for="ProfileImage">Upload Profile Image</label>
            <input asp-for="ProfileImage" type="file" class="form-control" />
        </div>

      <button  type="submit">Sign Up</button>
    </form>
  </body>

