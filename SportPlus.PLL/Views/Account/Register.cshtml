@model RegistrationVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="background-image: url('images/bg_3.jpg'); height: 1500; background-size: cover;">
    <div class="hero overlay">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-5 mx-auto text-center">
            <h1 class="text-white"></h1>
            <p></p>
          </div>
        </div>
      </div>
    </div>
    
    <form id="loginForm">

      <h3>Create an Account</h3>
      <p style="margin-top:10px ;text-align: center;">Sign up with your scoial Media Account or Email address</p>

      <div class="social">
        <div class="go"><button><a href = "#"><img src = "~/images/icons8-google-logo-30 (1).png" width="30px" height="30px"></button></a></div>
        <div class="fb"><button><a href = "#"><img src = "~/images/icons8-facebook-logo-30.png"  ></button></a></div>
      </div>
     <h1>------------------------</h1>
      <div class="username">
        <label for="username">Username</label>
        <input type="text" placeholder=" username" id="username" required>
  
      </div>
     <div class="email">
      
      <label for ="email">Email</label>
      <input type="email" placeholder="Email" id="email" required>

    </div>
      <div class="phone">

      <label for="phone">Phone</label>
      <input type="number" placeholder="Phone" id="phone" required>
      </div>
      <div class="Age">

        <label for="Age" style="margin-top: 30px;">Age</label>
        <input type="number" placeholder="Age" id="Age" required>
  
        <label for ="gender">Gender</label>
        <input type="text" placeholder="Gender" id="Gender" required>

      </div>
      
      <div class="password">

      <label for="password">Confirm Password</label>
      <input type="password" placeholder="Confirm Password" id="password" required>

      <label for="password">Password</label>
      <input type="password" placeholder="Password" id="password" required>
      </div>


      <button type="submit">Sign Up</button>

      
    </form>
  </body>

