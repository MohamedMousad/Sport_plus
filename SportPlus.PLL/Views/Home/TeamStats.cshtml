@model TeamRoot?
@{
    ViewData["Title"] = "TeamStats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model?.Response != null)
{
    <div class="team-stats mt-5">
        <h2>Team Statistics</h2>
        <h3>@Model.Response.Team?.Name</h3>
        <img src="@Model.Response.Team?.Logo" alt="@Model.Response.Team?.Name logo" />
        <table class="table">
            <thead>
                <tr>
                    <th>Statistic</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr><td>Matches Played</td><td>@Model.Response.Fixtures?.Played?.Total</td></tr>
                <tr><td>Wins</td><td>@Model.Response.Fixtures?.Wins?.Total</td></tr>
                <tr><td>Draws</td><td>@Model.Response.Fixtures?.Draws?.Total</td></tr>
                <tr><td>Losses</td><td>@Model.Response.Fixtures?.Loses?.Total</td></tr>

                <tr><td>Goals Scored</td><td>@Model.Response.Goals?.For?.Total?.Total</td></tr>
                <tr><td>Average</td><td>@Model.Response.Goals?.For?.Average?.Total</td></tr>
                <tr><td>Goals Conceded</td><td>@Model.Response.Goals?.Against?.Total?.Total</td></tr>
                <tr><td>Goals Scored</td><td>@Model.Response.Goals?.Against?.Average?.Total</td></tr>
                <tr><td>Penalties Scored</td><td>@Model.Response.Penalty?.Scored?.Total</td></tr>
                <tr><td>Penalties Missed</td><td>@Model.Response.Penalty?.Missed?.Total</td></tr>
            </tbody>
        </table>
    </div>
}
else
{
    <p>No team statistics available.</p>
}
